<%= simple_form_for @user, :url => url_for(:action => 'create', :controller => 'users') do |f| %>
  <%= f.input :name %>
  <%= f.input :color_id, collection: Color.all %>
  <%= f.input :last_name %>
  <%= f.input :email %>
  <%= f.input :password %>
  <%= f.input :password_confirmation %>
  <%= f.button :submit %>
<% end %>